<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}ToDo & Co{% endblock %}</title>

    {{ importmap('app') }}
</head>
<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom bg-white">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('app_homepage')|default('/') }}">
                    <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" height="28" class="me-2">
                    <span class="fw-semibold">ToDo & Co</span>
                </a>

                {% if app.user %}
                    <div class="ms-auto d-flex align-items-center gap-3">
                        <ul class="navbar-nav d-flex flex-row gap-3 mb-0">
                            <li class="nav-item">
                                <a class="nav-link {% if filter is defined and filter == 'all' %}active{% endif %}"
                                href="{{ path('task_list', {'filter': 'all'}) }}">
                                    Toutes les tâches
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if filter is defined and filter == 'todo' %}active{% endif %}"
                                href="{{ path('task_list', {'filter': 'todo'}) }}">
                                    Tâches à réaliser
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if filter is defined and filter == 'done' %}active{% endif %}"
                                href="{{ path('task_list', {'filter': 'done'}) }}">
                                    Tâches terminées
                                </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('user_list') }}"> Gérer les utilisateurs </a>
                            </li>
                            {% endif %}
                        </ul>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                            Se déconnecter
                        </a>
                    </div>
                {% else %}
                    <div class="ms-auto">
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                    </div>
                {% endif %}
            </div>
        </nav>
    </header>

    {% block hero %}{% endblock %}
    
    <main class="container my-4">
        {# affichage messages d'erreur #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="border-top py-4 mt-5">
        <div class="container">
            <p class="mb-0 text-end text-muted">Copyright &copy; OpenClassrooms</p>
        </div>
    </footer>

</body>
</html>
