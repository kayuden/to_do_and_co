<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}ToDo & Co app{% endblock %}</title>

    {{ importmap('app') }}
</head>
<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom bg-white">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('app_homepage')|default('/') }}">
                    <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" height="28" class="me-2">
                    <span class="fw-semibold">ToDo & Co</span>
                </a>

                <div class="ms-auto d-flex align-items-center gap-2">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Se d√©connecter</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>

    {% block hero %}{% endblock %}
    
    <main class="container my-4">
        {% block body %}{% endblock %}
    </main>

    <footer class="border-top py-4 mt-5">
        <div class="container">
            <p class="mb-0 text-end text-muted">Copyright &copy; OpenClassrooms</p>
        </div>
    </footer>

</body>
</html>
