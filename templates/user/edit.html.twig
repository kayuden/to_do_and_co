{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Modifier lâ€™utilisateur <strong>{{ user.username }}</strong></h5>
        </div>

        <div class="card-body">
          {{ form_start(form, {'action': path('user_edit', {'id': user.id})}) }}

            {{ form_row(form.username, {
              attr: { class: 'form-control mb-3', placeholder: "Nom d'utilisateur" }
            }) }}

            {{ form_row(form.email, {
              attr: { class: 'form-control mb-3', placeholder: 'Adresse email' }
            }) }}

            {# RepeatedType : plainPassword.first / plainPassword.second #}
            {{ form_row(form.plainPassword.first, {
              attr: { class: 'form-control mb-3', placeholder: 'Nouveau mot de passe' }
            }) }}

            {{ form_row(form.plainPassword.second, {
              attr: { class: 'form-control mb-3', placeholder: 'Confirmez le mot de passe' }
            }) }}

            <div class="d-flex justify-content-end gap-2 mt-2">
              <a href="{{ path('user_list') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Retour
              </a>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-save me-1"></i> Modifier
              </button>
            </div>

          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
